{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "[graphql] 🧪 Run Jest test on file",
      "type": "shell",
      "command": "pnpm",
      "problemMatcher": [],
      "args": [
        "--filter=@steadystart/graphql",
        "run",
        "test",
        "${file}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "clear": true,
        "focus": true
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
