    {
      "label": "[graphql] ğŸ§ª Run Jest test on file and update snapshots",
      "type": "shell",
      "command": "pnpm",
      "problemMatcher": [],
      "args": [
        "--filter=@steadystart/graphql",
        "run",
        "test",
        "${file}",
        "-u"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "clear": true,
        "focus": true
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
